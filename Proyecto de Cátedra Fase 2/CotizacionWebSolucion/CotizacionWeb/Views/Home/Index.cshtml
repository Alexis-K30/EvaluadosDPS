@model IEnumerable<CotizacionWeb.Models.DressViewModel>

@{
    ViewData["Title"] = "Catálogo de Vestidos";
}

<div class="text-center">
    <h1 class="display-4">Catálogo de Vestidos</h1>
</div>

<div class="dress-catalog">
    @foreach (var dress in Model)
    {
        <div class="dress-card">
            <img src="@dress.ImageUrl" alt="@dress.Name" />
            <h2>@dress.Name</h2>
            <p class="price">$@dress.Price</p>
            <p>@dress.Description</p>
            <a class="details-btn" href="@Url.Action("Details", "Home", new { id = dress.Id })">Ver Detalles</a>
            <button class="details-btn" onclick="document.getElementById('modal').style.display='block'">Cotizar producto</button>
        </div>
    }
</div>

<!-- Modal de Cotización -->
<div id="modal" class="modal">
    <div class="modal-content">
        <h3>Cotizar producto</h3>
        <input type="text" placeholder="Nombre completo" />
        <input type="text" placeholder="Correo" />
        <input type="text" placeholder="Teléfono" />
        <textarea placeholder="Mensaje (Talla, color, fecha del evento...)"></textarea>
        <button onclick="document.getElementById('modal').style.display='none'">Cancelar</button>
        <button>Enviar y abrir WhatsApp</button>
        <p>Al enviar, guardaremos tus solicitudes y abriremos WhatsApp con el mensaje prellenado.</p>
    </div>
</div>

@section Styles {
    <style>
        body {
            background-color: #FAFAFA;
            color: #1E1E1E;
            font-family: 'Playfair Display', serif;
        }

        .dress-catalog {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
            max-width: 1200px;
            margin: 30px auto;
            padding: 20px;
        }

        .dress-card {
            background-color: #FFFFFF;
            border: 2px solid #E6D6F5;
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .dress-card img {
                max-width: 100%;
                border-radius: 10px;
                margin-bottom: 15px;
            }

            .dress-card h2 {
                font-size: 1.3em;
                margin-bottom: 10px;
            }

        .price {
            color: #1E1E1E;
            font-weight: 700;
            font-size: 1.2em;
            margin: 10px 0;
        }

        /* Botones */
        .details-btn {
            text-decoration: none;
            background-color: #F7C8D7;
            border: none;
            padding: 10px 20px;
            color: #1E1E1E !important;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            display: inline-block;
            text-align: center;
            margin: 5px;
        }

            .details-btn:hover,
            .details-btn:focus,
            .details-btn:active {
                background-color: #FDE2C8;
                color: #1E1E1E !important;
                text-decoration: none;
            }

        /* Modal */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        .modal-content {
            background-color: #FAFAFA;
            padding: 30px;
            border-radius: 15px;
            width: 90%;
            max-width: 500px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            position: relative;
        }

            .modal-content h3 {
                font-size: 1.8em;
                margin-bottom: 20px;
                color: #1E1E1E;
            }

            .modal-content input,
            .modal-content textarea {
                width: 100%;
                margin-bottom: 15px;
                padding: 10px;
                border: 1px solid #E6D6F5;
                border-radius: 5px;
                font-family: 'Playfair Display', serif;
                color: #1E1E1E;
            }

            .modal-content button {
                background-color: #C8F7E4;
                border: none;
                padding: 12px 25px;
                color: #1E1E1E;
                cursor: pointer;
                border-radius: 5px;
                margin-right: 10px;
                transition: background-color 0.3s ease;
            }

                .modal-content button:hover {
                    background-color: #FDE2C8;
                }

            .modal-content p {
                font-size: 0.9em;
                color: #4A4A4A;
                margin-top: 10px;
            }

        @@media (max-width: 600px) {
            .dress-catalog

        {
            grid-template-columns: 1fr;
        }

        .modal-content {
            width: 95%;
            padding: 20px;
        }

        }
    </style>
}
