@model CotizacionWeb.Models.DressViewModel

@{
    ViewData["Title"] = "Detalles del Vestido";
}

<div class="text-center">
    <h1 class="display-4">@Model.Name</h1>
</div>

<div class="dress-details">
    <img src="@Model.ImageUrl" alt="@Model.Name" />
    <div class="info">
        <h2>@Model.Name</h2>
        <p class="price">$@Model.Price</p>
        <p>@Model.Description</p>
        <a class="details-btn" href="@Url.Action("Index", "Home")">Volver al catálogo</a>
        <button class="details-btn" onclick="document.getElementById('modal').style.display='flex'">Cotizar producto</button>
    </div>
</div>

<!-- Modal de Cotización -->
<div id="modal" class="modal">
    <div class="modal-content">
        <h3>Cotizar producto</h3>
        <input type="text" placeholder="Nombre completo" />
        <input type="text" placeholder="Correo" />
        <input type="text" placeholder="Teléfono" />
        <textarea placeholder="Mensaje (Talla, color, fecha del evento...)"></textarea>
        <div style="text-align: right;">
            <button onclick="document.getElementById('modal').style.display='none'">Cancelar</button>
            <button>Enviar y abrir WhatsApp</button>
        </div>
        <p>Al enviar, guardaremos tus solicitudes y abriremos WhatsApp con el mensaje prellenado.</p>
    </div>
</div>

@section Styles {
    <style>
        body {
            background-color: #FAFAFA;
            color: #1E1E1E;
            font-family: 'Playfair Display', serif;
        }

        .dress-details {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 30px;
            max-width: 1000px;
            margin: 30px auto;
            padding: 20px;
            background-color: #FFFFFF;
            border: 2px solid #E6D6F5;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .dress-details img {
                max-width: 400px;
                width: 100%;
                border-radius: 10px;
            }

            .dress-details .info {
                flex: 1;
                min-width: 250px;
            }

        .price {
            color: #1E1E1E;
            font-weight: 700;
            font-size: 1.5em;
            margin: 15px 0;
        }

        /* Botones */
        .details-btn {
            text-decoration: none;
            background-color: #F7C8D7;
            border: none;
            padding: 10px 20px;
            color: #1E1E1E;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            display: inline-block;
            text-align: center;
            margin: 5px;
        }

            /* Evitar que se ponga azul o morado */
            .details-btn,
            .details-btn:visited,
            .details-btn:active,
            .details-btn:hover {
                color: #1E1E1E !important;
                text-decoration: none;
            }

                .details-btn:hover {
                    background-color: #FDE2C8;
                }

        /* Modal */
        .modal {
            display: none; /* inicia oculto */
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            justify-content: center; /* centra horizontal */
            align-items: center; /* centra vertical */
            z-index: 1000;
            transition: opacity 0.3s ease;
        }

        .modal-content {
            background-color: #FAFAFA;
            padding: 30px;
            border-radius: 15px;
            width: 90%;
            max-width: 500px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            position: relative;
        }

            .modal-content h3 {
                font-size: 1.8em;
                margin-bottom: 20px;
                color: #1E1E1E;
            }

            .modal-content input,
            .modal-content textarea {
                width: 100%;
                margin-bottom: 15px;
                padding: 10px;
                border: 1px solid #E6D6F5;
                border-radius: 5px;
                font-family: 'Playfair Display', serif;
                color: #1E1E1E;
            }

            .modal-content button {
                background-color: #C8F7E4;
                border: none;
                padding: 12px 25px;
                color: #1E1E1E;
                cursor: pointer;
                border-radius: 5px;
                margin-top: 10px;
                transition: background-color 0.3s ease;
            }

                .modal-content button:hover {
                    background-color: #FDE2C8;
                }

            .modal-content p {
                font-size: 0.9em;
                color: #4A4A4A;
                margin-top: 15px;
            }

        @@media (max-width: 600px) {
            .dress-details

        {
            flex-direction: column;
            text-align: center;
        }

        .dress-details img {
            max-width: 100%;
        }

        .modal-content {
            width: 95%;
            padding: 20px;
        }

        }
    </style>
}
