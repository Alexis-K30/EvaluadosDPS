@model IEnumerable<Ejemplo_01ASP.Models.Product>
<h2>Agregar un producto</h2>
<a class="btn btn-success" asp-area="" asp-controller="Products" asp-action="Create">Agregar Producto</a>
<br />
<h2>Lista de Productos</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
            </tr>
        }
    </tbody>
</table>